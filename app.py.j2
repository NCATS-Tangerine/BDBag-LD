@app.route('/{{ db.name }}_{{ column }}/<{{ column }}>/')
def {{ db.name }}_{{ column }}({{ column }}):
    """ Get row by {{ column }}
    ---
    parameters:
      - name: {{ column }}
        in: path
        type: string
        required: true
        x-valueType:
          - {{ db.columns[column].type }}
        x-requestTemplate:
          - valueType: {{ db.columns[column].type }}
            template: /{{db.name }}_{{ column }}/{% raw %}{{ input }}{% endraw %}
      - name: include_similar
        in: query
        type: boolean
        default: false
        x-valueType:
          - http://schema.org/boolean
        x-requestTemplate:
          - valueType: http://schema.org/boolean

    responses:
      200:
        description: success
        x-responseValueType:{% for response_col in db.columns.values() %}
          - path: {{ response_col.name }}
            valueType: {{ response_col.type }}{% endfor %}
        x-JSONLDContext: /{{ db.name }}_metadata
    """
    include_similar = flask.request.args.get("include_similar")
    results = []
    cursor = get_{{ db.name }}_db ().cursor ()
    if include_similar == 'true':
        cursor.execute (
            "SELECT * FROM {{ db.name }} where lower({{ column }}) LIKE lower('%{0}%')".format (
                {{ column }}))
    else:
        cursor.execute (
            "SELECT * FROM {{ db.name }} where lower({{ column }}) = lower('{0}')".format (
                {{ column }}))
    col_name_list = []
    {% for col in db.columns%}col_name_list.append("{{ col }}")
    {% endfor %}
    def label_each_item(item):
      entry = {col:item[index] for index, col in enumerate(col_name_list)}
      return entry
    def ResultIter(arraysize=10):
      while True:
          results = cursor.fetchmany(arraysize)
          if not results:
              break
          for result in results:
              yield result
    cursor_contents = []
    def add_cursor_items_to_a_list():
      for x in ResultIter():
        cursor_contents.append(x)
      return cursor_contents
    cursor_contents = add_cursor_items_to_a_list() # the simple way
    results = [label_each_item(item) for item in cursor_contents]
    cursor.close ()
    return _jsonify(results)
